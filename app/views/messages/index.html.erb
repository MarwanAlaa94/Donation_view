<p id="notice"><%= notice %></p>

<h1>Messages</h1>
<div  style="font-size:20px;">

<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th >Name</th>
      <th>Email</th>
      <th>Subject</th>
      <th>Contect</th>
      <th>Admin reply</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= truncate(message.name, :length => 25)  %></td>
        <td><%= truncate(message.email, :length => 25) %></td>
        <td><%= truncate(message.subject, :length => 25)  %></td>
        <td><%= truncate(message.contect, :length => 25) %></td>
        <td><%= truncate(message.reply, :length => 25) %></td>
        <td><%= link_to 'Show', message %> | <%= link_to 'Delete', message,method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

